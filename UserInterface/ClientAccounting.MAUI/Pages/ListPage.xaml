<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientAccounting.MAUI.Pages.ListPage"
             Title="ListPage"
             >

    <ContentPage.Resources>
        <ResourceDictionary>
            <Shadow x:Key="CommonShadow"
                Brush="black"
                Offset="1,11"
                Radius="20"
                Opacity="0.5"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <StackLayout>
        <SearchBar x:Name="searchBar" TextChanged="searchBar_TextChanged" Placeholder="Поиск"
                   SearchCommand="{Binding PerformSearch}"
                   SearchCommandParameter="{Binding Text, Source={x:Reference searchBar}}"/>

            <ScrollView Margin="10" Grid.Row="1">
                <FlexLayout FlexLayout.Grow="1" Direction="Column" JustifyContent="Start" AlignContent="Center">
                    <CollectionView x:Name="collectionView" ItemsSource="{Binding Clients}" SelectionMode="Single" SelectionChanged="collectionView_SelectionChanged">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Vertical" Span="3" VerticalItemSpacing="20" HorizontalItemSpacing="20"/>
                        </CollectionView.ItemsLayout>
                            
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border StrokeShape="RoundRectangle 20,20,20,20" Stroke="Black" Padding="20">
                                    <StackLayout>
                                        <Label FontSize = "20"  TextColor = "#006064"  Margin="10">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="Логин: " FontAttributes="Bold" TextColor="Black"/>
                                                    <Span Text="{Binding Login}"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <Label FontSize = "20"  TextColor = "#006064"  Margin="10">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="Имя: " FontAttributes="Bold" TextColor="Black"/>
                                                    <Span Text="{Binding Name}"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <Label FontSize = "20"  TextColor = "#006064"  Margin="10">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="Фамилия: " FontAttributes="Bold" TextColor="Black"/>
                                                    <Span Text="{Binding Surname}"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <Label FontSize = "20"  TextColor = "#006064"  Margin="10">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="Отчество: " FontAttributes="Bold" TextColor="Black"/>
                                                    <Span Text="{Binding Patronymic}"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <Label FontSize = "20"  TextColor = "#006064"  Margin="10">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="Контакт: " FontAttributes="Bold" TextColor="Black"/>
                                                    <Span Text="{Binding Patronymic}"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <Label FontSize = "20"  TextColor = "#006064"  Margin="10">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="Почта: " FontAttributes="Bold" TextColor="Black"/>
                                                    <Span Text="{Binding Email}"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <Label FontSize = "20"  TextColor = "#006064"  Margin="10">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="Рейтинг: " FontAttributes="Bold" TextColor="Black"/>
                                                    <Span Text="{Binding Rating}"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <!--<Label Text="{Binding Login}" />-->
                                        <!--<Label Text="{Binding Name}" FontSize = "20"  TextColor = "#006064" Margin="10"/>
                                        <Label Text="{Binding Surname}" FontSize = "20"  TextColor = "#006064" Margin="10"/>
                                        <Label Text="{Binding Patronymic}"  FontSize = "20"  TextColor = "#006064" Margin="10"/>
                                        <Label Text="{Binding Contact}"  FontSize = "20"  TextColor = "#006064" Margin="10"/>
                                        <Label Text="{Binding Email}"  FontSize = "20"  TextColor = "#006064" Margin="10"/>
                                        <Label Text="{Binding Rating}"  FontSize = "20"  TextColor = "#006064" Margin="10"/>-->
                                    </StackLayout>
                                </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                </FlexLayout>
            </ScrollView>
