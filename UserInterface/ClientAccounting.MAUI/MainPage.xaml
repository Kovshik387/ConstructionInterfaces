<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientAccounting.MAUI.MainPage">
    <ScrollView>
        <Border Stroke="Black" StrokeThickness="1" StrokeShape="RoundRectangle 35,35,35,35" Margin="5" HeightRequest="250" WidthRequest="250">
            <StackLayout Spacing="20" Padding="10">
                <Label HorizontalOptions="Center" FontAttributes="Bold" Text="Авторизация"/>
                <Entry WidthRequest="200" Text="{Binding Login}" x:Name="LoginEntry" Placeholder="Логин"/>
                <HorizontalStackLayout WidthRequest="200">
                    <Entry WidthRequest="160" Text="{Binding Password}" x:Name="PasswordEntry" Placeholder="Пароль" IsPassword="True"/>
                    <ImageButton WidthRequest="20" MaximumWidthRequest="20" Source="password.png" Clicked="Button_Clicked"/>
                    <ActivityIndicator x:Name="Activity" IsVisible="False" IsRunning="False"/>

                </HorizontalStackLayout>
                
                <Button Text="Войти" Clicked="Authorization_Click" VerticalOptions="End"/>
            </StackLayout>
        </Border>
    </ScrollView>
</ContentPage>
